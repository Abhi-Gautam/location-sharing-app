# Google Maps Configuration
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Backend Configuration (choose 'elixir' or 'rust')
BACKEND_TYPE=elixir

# Elixir Backend URLs
ELIXIR_API_BASE_URL=http://localhost:4000/api
ELIXIR_WS_BASE_URL=ws://localhost:4000/socket/websocket

# Rust Backend URLs
RUST_API_BASE_URL=http://localhost:8080/api
RUST_WS_BASE_URL=ws://localhost:8081/ws

# App Configuration
APP_NAME=Location Sharing
DEBUG_MODE=true

# Development URLs (for Android emulator)
# Use 10.0.2.2 instead of localhost for Android emulator
DEV_API_BASE_URL=http://10.0.2.2:4000/api
DEV_WS_BASE_URL=ws://10.0.2.2:4000/socket/websocket

# Production URLs (replace with your actual production URLs)
PROD_API_BASE_URL=https://api.locationsharing.com/api
PROD_WS_BASE_URL=wss://api.locationsharing.com/socket/websocket